<main id="info-article">
   <div style="text-align: center;font-size: 10px;">
    <h2>{{'Search articles by'|t}}:</h2>
   </div>
    <div class="list-type">
        <div class="option">
            <ul>
                <li class="target active" id="name">
                    <img src="/themes/custom/basic/images/article_tipo/articulo.svg" width="100">
                    <h2>{{ 'Name'|t }}</h2>
                </li>
                <li class="target" id="autor">
                    <img src="/themes/custom/basic/images/article_tipo/autor.svg" width="100">
                    <h2>{{ 'Author'|t }}</h2>
                </li>
                <li class="target" id="tipo">
                    <img src="/themes/custom/basic/images/article_tipo/contenido.svg" width="100">
                    <h2>{{ 'Type'|t }}</h2>
                </li>
            </ul>
        </div>

        <div class="box-type">
            <div class="article name active">
                <div class="input">
                    <form action="/search/content/by/type" method="get">
                        <input type="search" name="name" id="name-input" placeholder="Nombre del artículo">
                        <input type="submit" value="Buscar">
                    </form>
                </div>
                <div class="search-result">
                {% if name is not null %}
                        {% if data|length > 0 %}
                            <div class="result">
                                {% for item in data %}
                                    <div class="item-news last-article">
                                        <div class="text">
                                            <div class="save no" data-id=" {{ item.nid }}" data-session="authentificate">
                                                <a href="#" class="node_saved">{{ 'Save' }}</a>
                                            </div>
                                            <h3 class="title">
                                                <a href="{{ item.url }}" hreflang="es">{{ item.title }}</a>
                                            </h3>
                                            <span class="category">{{ item.type }}</span>
                                            <div class="info">
                                                <span class="author">
                                                    <a href="{{ item.autor.uri }}" hreflang="es">{{ item.autor.name_author }}</a>
                                                </span>
                                                <date>{{ item.date }}</date>
                                            </div>
                                            <div class="explorer">
                                                <a href="{{ path('entity.node.canonical', {'node': item.nid}) }}">Ver más</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="no-result">
                                <p>{{ 'No search results'|t }}.</p>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>

            </div>

            <div class="article autor">
                <div class="input">
                    <form action="/search/content/by/type" method="get">
                        <select name="autor" id="autor-input">
                            {% for user in users %}
                                <option value="{{ user.uid }}">{{ user.name }}</option>
                            {% endfor %}
                        </select>
                        <input type="submit" value="Buscar">
                    </form>
                </div>
                <div class="search-result">
                    {% if autor is not null %}
                        {% if data|length > 0 %}
                            <div class="result">
                                {% for item in data %}
                                    <div class="item-news last-article">
                                        <div class="text">
                                            <div class="save no" data-id=" {{ item.nid }}" data-session="authentificate">
                                                <a href="#" class="node_saved">{{ 'Save'|t }}</a>
                                            </div>
                                            <h3 class="title">
                                                <a href="{{ item.url }}" hreflang="es">{{ item.title }}</a>
                                            </h3>
                                            <span class="category">{{ item.type }}</span>
                                            <div class="info">
                                                <span class="author">
                                                    <a href="{{ item.autor.uri }}" hreflang="es">{{ item.autor.name_author }}</a>
                                                </span>
                                                <date>{{ item.date }}</date>
                                            </div>
                                            <div class="explorer">
                                                <a href="{{ path('entity.node.canonical', {'node': item.nid}) }}">{{ 'Show more' }}</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="no-result">
                                <p>{{ 'No search results'|t }}.</p>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>

            <div class="article tipo">
                <div class="input">
                    <form action="/search/content/by/type" method="get">
                        <select name="tipo" id="tipo-input">
                            <option value="article">{{ 'Articles'|t }}</option>
                            <option value="infografias">{{ 'Infographics'|t }}</option>
                            <option value="microlearning">{{ 'Microlearning'|t }}</option>
                            <option value="podcast">{{ 'Podcast'|t }}</option>
                            <option value="videos">{{ 'Video'|t }}</option>
                            <option value="articulo_cientifico">{{ 'Scientific article'|t }}</option>
                            <option value="manuscrito_articulo_revision">{{ 'Review article'|t }}</option>
                            <option value="manuscrito_articulo_especial">{{ 'Special article'|t }}</option>
                            <option value="manuscrito_articulo_original">{{ 'Original article'|t }}</option>
                            <option value="manuscrito_ciencia_panlar">{{ 'Ciencia Panlar'|t }}</option>
                            <option value="manuscrito_columnas">{{ 'Columns' }}</option>
                            <option value="manuscrito_comentarios_respues">{{ 'Comments and responses'|t }}</option>
                            <option value="manuscrito_editorial">{{ 'Editorial'|t }}</option>
                            <option value="manuscrito_mini_revision">Mini Revisión</option>
                            <option value="manuscrito_multimedia">{{ 'Multimedia'|t }}</option>
                            <option value="manuscrito_noticia">{{ 'News'|t }}</option>
                            <option value="manuscrito_reportajes_especiales">{{ 'Special Reports'|t }}</option>
                            <option value="manuscrito_rondas_clinicas">{{ 'Clinical Rounds'|t }}</option>
                        </select>
                        <input type="submit" value="Buscar">
                    </form>
                </div>
                <div class="search-result">
                    {% if tipo is not null %}
                        {% if data|length > 0 %}
                            <div class="result">
                                {% for item in data %}
                                    <div class="item-news last-article">
                                        <div class="text">
                                            <div class="save no" data-id=" {{ item.nid }}" data-session="authentificate">
                                                <a href="#" class="node_saved">{{ 'Save' }}</a>
                                            </div>
                                            <h3 class="title">
                                                <a href="{{ item.url }}" hreflang="es">{{ item.title }}</a>
                                            </h3>
                                            <span class="category">{{ item.type }}</span>
                                            <div class="info">
                                                <span class="author">
                                                    <a href="{{ item.autor.uri }}" hreflang="es">{{ item.autor.name_author }}</a>
                                                </span>
                                                <date>{{ item.date }}</date>
                                            </div>
                                            <div class="explorer">
                                                <a href="{{ path('entity.node.canonical', {'node': item.nid}) }}">{{ 'Show more'|t }}</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="no-result">
                                <p>{{ 'No search results'|t }}.</p>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>    
    </div>
</main>