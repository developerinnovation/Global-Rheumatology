<main id="form-node-manuscrito">
    <div>
        <h2> {{ "Rate article"|t }} </h2>
        <p> {{ "Rate from 1 to 5, with 1 being the lowest and 5 being the highest"|t }} </p>
    </div>
    {{ markup }}
</main>

<script>
    $("#edit-title-0-value").prop('disabled', true);
    $("#edit-field-articulo-en-revision-0-target-id").prop('disabled', true);
    $("#edit-title-0-value").val(new Date().getTime());
    $("#edit-field-articulo-en-revision-0-target-id").val('{{ revision }}');
    $("#edit-submit").click(function() {
        $("#edit-title-0-value").prop('disabled', false);
        $("#edit-field-articulo-en-revision-0-target-id").prop('disabled', false);
    });
</script>