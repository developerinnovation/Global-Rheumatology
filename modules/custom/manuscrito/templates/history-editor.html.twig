<main id="info-article">
    <h2> {{ 'Revision history'|t }} </h2>
    <div class="list-type">
        <div class="search">
            <input type="search" name="search-article-history" id="search-article-history" placeholder="{{ 'Buscar artÃ­culo'|t }}" onkeyup="searchRevision(this.value)">
        </div>
        <div class="box-type revision">           
            <div class="article active">
                {% for item in data %}
                    <table class="tg">
                        <tbody>
                            <tr>
                                <td class="tg-cly1">{{ 'Title'|t }}:<br></td>
                                <td class="tg-nrix" colspan="3">
                                    <a href="{{ item.url }}" hreflang="es">{{ item.title }}</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="tg-cly1">{{ 'Type'|t }}:<br></td>
                                <td class="tg-nrix" colspan="3">{{ item.type }}</td>
                            </tr>
                            <tr>
                                <td class="tg-cly1">{{ 'Author'|t }}:</td>
                                <td class="tg-nrix" colspan="3">
                                    <a href="{{ item.autor.uri }}" hreflang="es">{{ item.autor.name_author }}</a>
                                </td>
                            </tr>
                            {% if type != 'created' %}
                                <tr>
                                    <td class="tg-cly1">{{ 'Status'|t }}:</td>
                                    <td class="tg-nrix" colspan="3">{{ item.status }}</td>
                                </tr>
                            {% endif %}
                            <tr>
                                <td class="tg-cly1">{{ 'Received the day'|t }}:</td>
                                <td class="tg-nrix" colspan="3">{{ item.date }}</td>
                            </tr>
                            <tr>
                                <td class="tg-cly1">{{ 'Update the day'|t }}:</td>
                                <td class="tg-nrix" colspan="3">{{ item.update }}</td>
                            </tr>
                            <tr>
                                <td class="tg-cly1">{{ 'Posted the day'|t }}:</td>
                                <td class="tg-nrix" colspan="3">{{ item.publish }}</td>
                            </tr>
                            
                            {% if type != 'created' %}
                                <tr>
                                    <td class="tg-cly1">{{ 'Assigned reviewers'|t }}:</td>
                                    <td class="tg-nrix" colspan="3">{{ item.listRevisor|raw }}</td>
                                </tr>
                                <tr>
                                    <td class="tg-cly1">{{ 'See full history'|t }}:</td>
                                    <td class="tg-nrix" colspan="3">
                                        <a href="{{ item.record }}"> {{ 'Go to history'|t }} </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="tg-nrix" colspan="4">{{ 'Actions'|t }}</td>
                                </tr>
                                <tr>
                                    <td class="tg-nrix">
                                        <a href="{{ item.url }}" target="_blank"> {{ 'Show'|t }} </a>
                                    </td>
                                    {% if type != 'rejected' %}
                                        <td class="tg-nrix">
                                            <a href="{{ item.assign }}"> {{ 'Sssign'|t }} </a>
                                        </td>
                                    {% endif %}
                                    <td class="tg-nrix">
                                        <a href="{{ item.urlEdit }}"> {{ 'Approve'|t }}/{{ 'Reject'|t }} </a>
                                    </td>
                                    <td class="tg-nrix">
                                        <a href="{{ item.comments_autor }}"> {{ 'Comments to autho'|t }} </a>
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                {% endfor %}
            </div>
        </div>    
    </div>
</main>
<script>
    $('.launcher-box-message').removeClass('active');
</script>
<style type="text/css">
    .tg  {border-collapse:collapse;border-spacing:0;}
    .tg td{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
    overflow:hidden;padding:10px 5px;word-break:normal;}
    .tg th{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
    font-weight:normal;overflow:hidden;padding:10px 5px;word-break:normal;}
    .tg .tg-cly1{text-align:left;vertical-align:middle}
    .tg .tg-nrix{text-align:center;vertical-align:middle}
</style>