<script>
    var id = {{ node.nid.value }};
    var type = "{{ node.getType }}";
    $(".tabs.primary li a").eq(1).attr('href', '/update/' + type.replace("manuscrito_","") +'/'+ id );
</script>
{% set classes = ['node'] %}

<article {{ attributes.addClass(classes) }}>
    <div id="main" class="despliegue-nodo">
        <div class="container two-col">
            <div class="left" style="background-image: url('{{ file_url(node.field_image.entity.uri.value) }}');background-repeat: no-repeat">
                <div class="box">

                    <h1 {{ attributes }}>{{ node.title.value }}</h1>
                    
                    
                    <div class="info">                            
                        <date class="date">{{ content.field_fecha.value|date('U')|format_date('mes_ano') }}</date>
                    </div>

                    <div class="revision">                        
                        <dd>{{ drupal_view('manuscritos', 'block_1') }}</dd>
                    </div>

                    <div class="tags">
                        {% if content.field_tags[0] %}
                        <label>Tags</label>
                        <ul>
                            {% for key, item in content.field_tags if key|first != '#' %}
                            <li>{{ item }}</li>
                            {% endfor %}
                        </ul>
                        {% endif %} 
                    </div> 

                </div>
            </div>

            <div class="right">
                <div class="content article">
                    <div class="title large">
                        <h2>{{ node.field_titulo_ingles.value }}</h2> 
                    </div>
                            
                    {% if node.field_editorial.value %}
                        <div class="block editorial">
                            <div class="title-block">
                                <h2>Editorial</h2>
                                <button class="btn-show-text" data-id="editorial">cerrar</button>
                            </div> 
                            <div class="box active">
                                <p>{{ node.field_editorial.value|raw }}</p>
                            </div>
                        </div>
                    {% endif %}

              
                </div>
            </div>
        </div>

        <div class="container">
            <div class="news infinite-contents manuscrito">
                {% set array = [user.id,node.nid.value] %}
                <div class="block-title">
                    <h3>Mis manuscritos</h3>
                </div>
                {{ drupal_view('manuscritos', 'block_2',user.id) }}
            </div>
        </div>
    </div>
    <!-- /#main -->
</article>
<!-- /.node -->