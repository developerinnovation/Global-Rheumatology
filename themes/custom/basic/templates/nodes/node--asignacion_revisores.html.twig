{% set classes = ['node'] %}

<article {{ attributes.addClass(classes) }}>
  <div class="block-manuscrito">
    <div class="tabs" style="text-align: center">
      <span>{{ "Available Actions"|t }}</span>
        <ul class="tabs primary">
          <li class="tabs__tab tabs__tab--active"><a href="" class="is-active">{{ "Reviewer assignment detail"|t }}</a></li>
          <li class="tabs__tab"><a href="{{ path('entity.node.canonical', {'node': node.field_articulo_en_revision.target_id}) }}">{{ "Return to article"|t }}</a></li>
          <li><a href="/assign/{{ node.field_articulo_en_revision.target_id }}/{{ node.field_articulo_en_revision.target_id|md5 }}">{{ "Continue assigning reviewers"|t }}</a></li>
        </ul>
    </div>
  </div>
  <div id="main">
    <div class="container two-col">
      <div class="left"  style="background-image: url('{{ file_url(node.field_image.entity.uri.value) }}');background-repeat: no-repeat">
        <div class="box">
          <h1 {{ attributes }}>
            {{ "Asignment id"|t }} : {{ node.title.value }}
          </h1>
          
          <div class="info article">
              <br>
              <div>
                <date>{{ content.created.value|date('U')|format_date('global') }}</date>
              </div>
              <br>
          </div>

        </div>
        

      </div>
      
      <div class="right">
        <div class="content article">
          <h3> {{ "Article under review"|t }} : {{ drupal_field('title', 'node', node.field_articulo_en_revision.target_id) }} </h3>
          
          <div class="article__body">
            <a style="text-decoration: underline;" href="{{ path('entity.node.canonical', {'node': node.field_articulo_en_revision.target_id}) }}"> {{ "Go to article"|t }} </a>
            <br><br>
          </div>
          
          <div class="article__body">
            {% set nombre %} {{ drupal_field('field_nombre', 'user', node.field_asignar_revisor.target_id) }}  {% endset %}
            {% set apellidos %} {{ drupal_field('field_apellidos', 'user', node.field_asignar_revisor.target_id) }} {% endset %}
            {{ "Asigned reviewer"|t }} : {{ nombre|raw }} {{ apellidos|raw }}
          </div>
        </div>
      </div>
    
    </div><!-- /.container -->
  </div><!-- /#main -->
</article><!-- /.node -->
