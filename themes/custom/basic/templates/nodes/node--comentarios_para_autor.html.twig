{% set classes = ['node'] %}

<article {{ attributes.addClass(classes) }}>
  <ul class="tabs primary">
      <li class="tabs__tab tabs__tab--active"><a href="" class="is-active">{{ 'Comentario para autor'|t }}</a></li>
      <li class="tabs__tab"><a href="{{ path('entity.node.canonical', {'node': node.field_articulo_en_revision.target_id}) }}">{{ 'Regresar al artículo'|t }}</a></li>
  </ul>
  <div id="main">
    <div class="container two-col">
      <div class="left"  style="background-image: url('{{ file_url(node.field_image.entity.uri.value) }}');background-repeat: no-repeat">
        <div class="box">
          <h1 {{ attributes }}>
            {{ 'Id del comentario'|t }} : {{ node.title.value }}
          </h1>
          
          <div class="info article">
              <br>
              <div>
                <date>{{ content.created.value|date('U')|format_date('global') }}</date>
              </div>
              <br>
          </div>

        </div>
        

      </div>
      
      <div class="right">
        <div class="content article">
          <h3> {{ 'Detalle del comentario para artículo'|t }} : <a href="{{ path('entity.node.canonical', {'node': node.field_articulo_en_revision.target_id}) }}">{{ drupal_field('title', 'node', node.field_articulo_en_revision.target_id) }}</a></h3>
          
          <div class="article__body">
            <a style="text-decoration: underline;" href="{{ path('entity.node.canonical', {'node': node.field_articulo_en_revision.target_id}) }}"> {{ 'Ir al artículo'|t }} </a>
            <br><br>
          </div>
          
          <div class="article__body">
            {{ 'Comentario'|t }} : <br>
            {{ node.field_comentarios.value|raw }}
          </div>
        </div>
      </div>
    
    </div><!-- /.container -->
  </div><!-- /#main -->
</article><!-- /.node -->
