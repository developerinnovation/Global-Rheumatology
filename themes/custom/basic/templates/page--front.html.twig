<!-- ______________________ MAIN _______________________ -->
<div id="main">
    <div class="container">
        <div class="first_new">
            {{ drupal_view('home', 'block_1') }}
            <div class="scroll arrow-down"></div>
        </div>
    </div>
    <!-- /.container -->

    <div class="container">
        <div class="send_article">
            <div class="block-title">
            <h3>{{ drupal_field('title', 'node',  208) }}</h3>
                <!--<h3>{{"Send your article"|t}}<</h3>-->
            </div>
            <div>
                {{ drupal_field('body', 'node',  208) }}
            </div>

            <!--<p>Sea parte de Global Rheumalology enviando sus contenidos. <br> Revise en l√≠nea el estado de sus publicaciones y revisiones. </p>-->
            <button class="send-article new-article {% if user.id != 0 %}authentificate{% else %}anonime{% endif %}" data-heref="{% if user.id != 0 %} /new/send/manuscrito {% else %}  {% endif %}">{{"Submit article"|t }}</button>
        </div>
    </div>
    <!-- /.container -->

    <div class="container">
        <div class="last_news">
            <div class="top">
                <div class="left">
                    <div class="block-title">
                        <h3>{{"Latest articles"|t }}</h3>
                    </div>
                </div>
                <div class="right">
                    <span id="article-cientifico" class="more-cientifico active">{{"Scientific articles"|t }}</span>
                    <hr>
                    <span id="article-magazine" class="more-magazine">{{"Magazine"|t }}</span>
                </div>
            </div>
            <div class="bottom">
                <div class="view_news more-cientifico active">
                    <dd>{{ drupal_view('home', 'block_3') }}</dd>
                </div>
                <div class="view_news more-magazine">
                    <dd>{{ drupal_view('home', 'block_7') }}</dd>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->

    <div class="container">
        <div class="most_read">
            <div class="top">
                <div class="left">
                    <div class="block-title">
                        <h3>{{"Trends"|t }}</h3>
                    </div>
                </div>
                <div class="right">
                    <span id="read" class="more-read active">{{"The most seen"|t }}</span>
                    <hr>
                    <span id="shared" class="more-shared">{{"The most shared"|t }}</span>
                </div>
            </div>
            <div class="bottom">
                <div class="view_news more-read active">
                    <dd>{{ drupal_view('home', 'block_4') }}</dd>
                </div>
                <div class="view_news more-shared">
                    <dd>{{ drupal_view('home', 'block_5', more_shared_nid) }}</dd>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->

    <div class="container">
        <div class="magazine_news">
            <div class="block-title">
                <h3>{{"Magazine"|t }}</h3>
            </div>
            <dd>{{ drupal_view('home', 'block_6') }}</dd>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /#main -->