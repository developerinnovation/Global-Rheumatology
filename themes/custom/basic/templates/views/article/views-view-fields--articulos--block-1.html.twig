<div class="item-news related-article article">
    <div class="picture">
        <figure class="infographics">{{ fields.field_image.content }}</figure>
        <div {% set nid = row._entity.nid.value %} class="{% if user.id != 0 %}authentificate{% else %}anonime{% endif %} save {% if  nid in user.node_saved['split'] %}saved{% else %}no{% endif %}" data-id="{{ nid }}">
          <a href="#" class="node_saved">Guardar</a>
        </div>
    </div>
    <div class="text">
        <div class="category">{{ fields.field_categoria.content }}</div>
        <h3 class="title">{{ fields.title.content }}</h3>
        <div class="info">
            <span class="author">{{ fields.field_nombre.content }}</span>
            <date>{{ fields.created.content }}</date>
        </div>
        <div class="explorer">{{ fields.nothing.content }}</div>
    </div>
</div>